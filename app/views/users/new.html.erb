<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @user.errors.count %> erro(s) impedem que a tarefa seja salva
    </h2>
    <ul>
      <% @user.errors.each do |attr, msg| %>
        <li>: <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if @passw_error%>
  <div id="error_explanation2">
    <%=@passw_error %>
  </div>
<% end %>
<%= form_with scope: :user, url: users_path, local: true  do |form| %>
  <p>
    <%= form.label :Nome %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label "Email" %><br>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.label "Senha" %><br>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.label "Confirmar senha" %><br>
    <%= form.password_field :password_confirmation %>
  </p>
  <p>
    <%= form.submit 'Registrar' %>
  </p>
<% end %>
