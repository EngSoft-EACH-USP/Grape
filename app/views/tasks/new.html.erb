<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @task.errors.count %> erro(s) impedem que a tarefa seja salva
    </h2>
    <ul>
      <% @task.errors.each do |attr, msg| %>
        <li>: <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
